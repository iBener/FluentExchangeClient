<Project Sdk="Microsoft.NET.Sdk">

  <PropertyGroup>
    <TargetFramework>netstandard2.0</TargetFramework>
    <Version>0.0.4</Version>
    <Authors>İbrahim Bener</Authors>
    <RepositoryUrl>https://github.com/iBener/FluentExchangeClient</RepositoryUrl>
    <PackageTags>exchange;exchange client;bitcoin;crypto;cryptocurrency;fluent;binance</PackageTags>
